{
  "book":
  {
    "title": "Once There Was A Test",
    "series": "Testiliscious",
    "authors": "Unit Test",
    "publisher": "UT",
    "language": "UND",
    "genre": "",
    "state": "ongoing",
    "chapters": [
      {
        "source": "./chapters/01-1.chapter",
        "publish": true
      },
      {
        "source": "./chapters/02-2.chapter",
        "publish": false
      }
    ]
  },
  "outputs": [
    {
      "name": "html",
      "type": "html",
      "single_file": true,
      "path": "output/html/test.htm",
      "css_path": "test.css"
    },
    {
      "name": "json",
      "type": "json",
      "slug": "otwat",
      "path": "output/json/test.json",
      "compress_content": true,
      "css_path": "test.css"
    },
    {
      "name": "epub",
      "type": "ebook-convert",
      "path": "output/ebook/test.epub",
      "ebookconvert_params": [
        "--level1-toc=//h:h1"
      ],
      "css_path": "test.css"
    }
  ],
  "substitutions": [
    {
      "type": "simple",
      "find": "Test",
      "replace_with": "Success"
    },
    {
      "type": "regex",
      "expression": "^##.*$",
      "replace_with": "<p class='center no_indent'>*</p>"
    }
  ]
}